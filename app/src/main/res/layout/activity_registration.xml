<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg_color"
    tools:context=".views.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/employee_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Employee Registration"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/personal_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                android:text="Personal Details"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/emp_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:hint="Employee First Name"
                android:imeOptions="actionNext"
                android:includeFontPadding="false"
                android:inputType="textPersonName"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/emp_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:hint="Employee Last Name"
                android:imeOptions="actionNext"
                android:includeFontPadding="false"
                android:inputType="textPersonName"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/emp_birthyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:hint="Employee Birth year"
                android:imeOptions="actionNext"
                android:includeFontPadding="false"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/employee_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Employee Details"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emp_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="11dp"
                android:hint="Employee Salary"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/emp_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="11dp"
                android:hint="Occupation Rate"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/emp_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="11dp"
                android:hint="Employee ID"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/emp_type"
                android:layout_width="370dp"
                android:layout_height="38dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emp_Id" />

            <EditText
                android:id="@+id/workTypeCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="11dp"
                android:hint="#projects"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/Vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Vehicle Details"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Vehicle_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Vehicle Type"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/vehicleRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp">

                    <RadioButton
                        android:id="@+id/typeCar"
                        android:layout_width="82dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="16dp"
                        android:text="Car"
                        android:textSize="15dp"/>

                    <RadioButton
                        android:id="@+id/typeMotorcycle"
                        android:layout_width="119dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="16dp"
                        android:text="MotorCycle"
                        android:textSize="15dp"/>

                </RadioGroup>



            </LinearLayout>

            <EditText
                android:id="@+id/car_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="11dp"
                android:hint="Car Type"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/side_car_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone">


                <TextView
                    android:id="@+id/side_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:text="Side Car"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/sidebarRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="60dp">

                    <RadioButton
                        android:id="@+id/cycle_yes"
                        android:layout_width="77dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        android:text="Yes"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/cycle_no"
                        android:layout_width="72dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        android:text="No"
                        android:textSize="15dp" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/vehicle_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="Vehicle Model"
                android:imeOptions="actionNext"
                android:includeFontPadding="false"
                android:inputType="textPersonName"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/plate_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:hint="Plate Number"
                android:imeOptions="actionNext"
                android:includeFontPadding="false"
                android:inputType="textPersonName"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp" />


            <Spinner
                android:id="@+id/choose_color"
                android:layout_width="370dp"
                android:layout_height="38dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:entries="@array/colorTypes" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/theme_btn_text_color"
                android:text="Register"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>